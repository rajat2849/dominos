{
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": ["eslint:recommended" , "plugin:react/recommended" ],
    "rules": {
      "sourceType: module" : "off",
      "indent": [
        "off"
      ],
      "linebreak-style": [
        "off"
      ],
      "quotes": [
        "off"
      ],
      "semi": [
        "off"
      ],
      "no-console": "off"
    },
    "parserOptions": {
      "parser":"babel-eslint",
      "ecmaVersion": 8,
      "sourceType": "module",
      "allowImportExportEverywhere": true
    }
  }
